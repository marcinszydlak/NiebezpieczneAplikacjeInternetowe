@model Bai_APP.Models.ViewModels.UserSettingsViewModel

@{
    ViewBag.Title = "Change";
}

<h2>Informacje</h2>

<div id="container">

    <table class="table">

        <tr>
            <td>Ostatnia udana próba logowania:</td>
            <td class="right">@Model.LastSuccessLoginDate</td>
        </tr>

        <tr>
            <td>Ostatnia nieudana próba logowania:</td>
            <td class="right">@Model.LastFailLoginDate</td>
        </tr>

        <tr>
            <td>Liczba nieudanych prób logowania:</td>
            <td class="right">@Model.FailedLoginAttemptsCountSinceLastSuccessful</td>
        </tr>

        @using (Html.BeginForm(
            "UpdateAttemptsToLockAccount",
            "Settings",
            new { AttemptsNumberToLockAccount = @Model.AttemptsToLockAccount },
            FormMethod.Get,
            new { @class = "form-horizontal", role = "form" }))
        {
            <tr>
                <td>Blokowanie po:</td>
                <td class="right">
                    @Html.TextBoxFor(m => m.AttemptsToLockAccount, new { @class = "form-control" })
                </td>

            </tr>

            <tr>
                <td></td>
                <td class="right"><input type="submit" value="Zatwierdź" /></td>
            </tr>
        }

    </table>

</div>