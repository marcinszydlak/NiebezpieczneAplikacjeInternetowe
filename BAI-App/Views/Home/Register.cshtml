                @Html.PasswordFor(model => model.Password2, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password2)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" formmethod="get" class="btn btn-default" />
            </div>
