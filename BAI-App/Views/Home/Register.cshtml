                @Html.PasswordFor(model => model.Password1, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password2, new { @class = "col-md-2 control-label" })
