@model Bai_APP.Entity.ViewModels.RegisterUserViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rejestracja nowego konta</h4>
        <hr />
